extends layout

block content
  h3 Edit a menu
  p Enter menu details:
  div
  form(action='',method='post')
    div(data-role='fieldcontain')
      fieldset(data-role='controlgroup')
        label(for='restaurantName') Restaurant name:
          select(id='restaurantName')
    div(data-role='fieldcontain')
      fieldset(data-role='controlgroup')
        label(for='menuName') Menu:
          select(id='menuName')
    div Please note that changing the above fields will overwrite any changes below
    div(data-role='fieldcontain')
      fieldset(data-role='controlgroup')
        label(for='nrestaurant') New Restaurant Name:
           input(id='nrestaurant',type='text',value='',name='nrestaurant')
    div(data-role='fieldcontain')
      fieldset(data-role='controlgroup')
        label(for='nname') New Menu Name:
           input(id='nname',type='text',value='',name='nname')
    div(data-role='fieldcontain')
      input(type='submit',value='Submit',data-transition='fade', data-theme='c')
      
  script(src="/javascripts/menuEdit.js").