extends layout

block content
  h3 Add a menu
  p Enter menu details:
  div
  form(action='',method='post')
    div(data-role='fieldcontain')
      fieldset(data-role='controlgroup')
        label(for='cname') Current Name:
           input(id='cname',type='text',value='',name='cname')
    div(data-role='fieldcontain')
      fieldset(data-role='controlgroup')
        label(for='crestaurant') Current Restaurant:
           input(id='crestaurant',type='text',value='',name='crestaurant')
    div Leave blank if unchanged
    div(data-role='fieldcontain')
      fieldset(data-role='controlgroup')
        label(for='nname') New Name:
           input(id='nname',type='text',value='',name='nname')
    div(data-role='fieldcontain')
      fieldset(data-role='controlgroup')
        label(for='nrestaurant') New Restaurant:
           input(id='nrestaurant',type='text',value='',name='nrestaurant')
    div(data-role='fieldcontain')
      input(type='submit',value='Submit',data-transition='fade', data-theme='c')