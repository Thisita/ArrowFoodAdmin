extends layout

block content
  h3 Edit a restaurant
  p Enter restaurant details:
  div
  form(action='',method='post')
    div(data-role='fieldcontain')
      fieldset(data-role='controlgroup')
        label(for='restaurantName') Restaurant name:
          select(id='restaurantName')
    div(data-role='fieldcontain')
      fieldset(data-role='controlgroup')
        label(for='restaurantAddress') Restaurant address:
          select(id='restaurantAddress')
    div Be aware that changing the above fields will overwrite anything done below.
    div(data-role='fieldcontain')
      fieldset(data-role='controlgroup')
        label(for='nname') New Name:
           input(id='nname',type='text',value='',name='nname')
    div(data-role='fieldcontain')
      fieldset(data-role='controlgroup')
        label(for='nan') New Address Name:
           input(id='nan',type='text',value='',name='nan')
    div(data-role='fieldcontain')
      fieldset(data-role='controlgroup')
        label(for='naddress') New Address:
           input(id='naddress',type='address',value='',name='naddress')
    div(data-role='fieldcontain')
      fieldset(data-role='controlgroup')
        label(for='nac') New City:
           input(id='nac',type='text',value='',name='nac')
    div(data-role='fieldcontain')
      fieldset(data-role='controlgroup')
        label(for='nas') New State:
           input(id='nas',type='text',value='',name='nas')
    div(data-role='fieldcontain')
      fieldset(data-role='controlgroup')
        label(for='nzip') New ZIP:
           input(id='nzip',type='address',value='',name='nzip')
    div(data-role='fieldcontain')
      fieldset(data-role='controlgroup')
        label(for='email') Email:
           input(id='email',type='email',value='',name='email')
    div(data-role='fieldcontain')
      fieldset(data-role='controlgroup')
        label(for='phone') Phone:
           input(id='phone',type='phone',value='',name='phone')
    div(data-role='fieldcontain')   
      input(type='submit',value='Submit',data-transition='fade', data-theme='c')

  script(src="/javascripts/restaurantEdit.js").