extends layout

block content
  h3 Add a restaurant
  p Enter restaurant details:
  div
  form(action='',method='post')
    div(data-role='fieldcontain')
      fieldset(data-role='controlgroup')
        label(for='cname') Current Name:
           input(id='cname',type='text',value='',name='cname')
    div(data-role='fieldcontain')
      fieldset(data-role='controlgroup')
        label(for='caddress') Current Address:
           input(id='caddress',type='address',value='',name='caddress')
    div Leave input blank if unchanged.
    div(data-role='fieldcontain')
      fieldset(data-role='controlgroup')
        label(for='nname') New Name:
           input(id='nname',type='text',value='',name='nname')
    div(data-role='fieldcontain')
      fieldset(data-role='controlgroup')
        label(for='naddress') New Address:
           input(id='naddress',type='address',value='',name='naddress')
    div(data-role='fieldcontain')
      fieldset(data-role='controlgroup')
        label(for='email') Email:
           input(id='email',type='email',value='',name='email')
    div(data-role='fieldcontain')
      fieldset(data-role='controlgroup')
        label(for='phone') Phone:
           input(id='phone',type='phone',value='',name='phone')
    div(data-role='fieldcontain')   
      input(type='submit',value='Submit',data-transition='fade', data-theme='c')